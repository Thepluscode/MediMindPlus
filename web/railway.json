{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install --legacy-peer-deps && npm run build"
  },
  "deploy": {
    "startCommand": "npx serve out -l ${PORT:-3000} --single",
    "healthcheckPath": "/",
    "healthcheckTimeout": 30
  }
}
